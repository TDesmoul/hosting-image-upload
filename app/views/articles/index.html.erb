<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <div class="d-flex gap-4"><span class="flex-grow-1"><%= article.title %></span><%= link_to "Show this article", article %></div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
</div>

